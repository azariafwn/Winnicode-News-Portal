@{
    Layout = "~/Views/Shared/_ReaderLayout.cshtml";
    ViewBag.Title = "Profil - NewsPortal";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card p-4">
                <div class="d-flex flex-column align-items-center mb-4">
                    <div class="d-flex align-items-center justify-content-center">
                        <img src="~/images/profile-icon.png" alt="Foto Profil" class="rounded-circle me-4" width="100" height="100">
                        <div>
                            <h4 class="mb-1 username">Nama Lengkap Pengguna</h4>
                            <p class="mb-0 email-user">emailuser@example.com</p>
                        </div>
                    </div>
                </div>


                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <p class="label-blue">Gender</p>
                        <p class="data-pink">Laki-laki</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <p class="label-blue">Tanggal Lahir</p>
                        <p class="data-pink">01 Januari 2000</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <p class="label-blue">Nomor Telepon</p>
                        <p class="data-pink">+62 812 3456 7890</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <p class="label-blue">Alamat</p>
                        <p class="data-pink">Surabaya, Indonesia</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <p class="label-blue">Bergabung Sejak</p>
                        <p class="data-pink">20 Mei 2024</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <p class="label-blue">Role</p>
                        <p class="data-pink">User</p>
                    </div>
                </div>

                <div class="text-center">
                    <button class="pink-tag me-5">Edit Profil</button>
                    <button class="red-tag">Logout</button>
                </div>
            </div>
        </div>
    </div>
</div>
