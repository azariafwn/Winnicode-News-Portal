@model TestWinnicode.ViewModels.HomeViewModel
@{
    Layout = "~/Views/Shared/_ReaderLayout.cshtml";
    ViewBag.Title = "Beranda - NewsPortal";
}

<div class="container">
    <div class="row">
        <!-- Headline Section -->
        <div class="col-lg-5">
            <div class="headline-section mb-4">
                <div class="blue-tag">
                    HEADLINE
                </div>

                <!-- Headline Image dan Judul -->
                <a href="/Reader/Berita" class="headline-link">
                    <div class="headline-image">
                        <img src="/images/dummy-news-image.png" alt="Headline">
                        <div class="headline-title">
                            Judul Headline Utama Judul Headline Utama Judul Headline Utama Judul Headline Utama
                        </div>
                    </div>
                </a>

                <!-- Sub Headline -->
                <div class="row mt-3">
                    @for (int i = 1; i <= 6; i++) 
                    {
                        <div class="col-4 sub-headline-item">
                            <a href="/Reader/Berita">
                                <img src="/images/dummy-news-image.png" class="img-fluid rounded mb-2" alt="Sub Headline">
                                <h6 class="sub-headline-title">Judul Sub Headline 1 Judul Sub Headline 1</h6>
                            </a>
                        </div>
                    }
                </div>

            </div>
        </div>

        <!-- Trending Section -->
        <div class="col-lg-4">
            <div class="trending-section mt-4">
                <h5 class="pink-tag">TRENDING</h5>
                <ul class="list-group trending-list">
                    @for (int i = 0; i < Model.TrendingList.Count; i++)
                    {
                        var b = Model.TrendingList[i];
                        <li class="list-group-item trending-item">
                            <div class="ranking">@((i + 1).ToString("D2"))</div>
                            <div class="trending-details">
                                <a href="/reader/berita/@b.Id">
                                    <h6 class="trending-title">@b.Judul</h6>
                                    <span class="trending-meta">Kategori: @b.SubKategori?.Kategori?.Nama | Dibaca @b.Jumlah_View kali</span>
                                </a>
                            </div>
                        </li>
                    }
                </ul>
                <a href="/Reader/Trending" class="trending-link">Trending Lainnya >></a>
            </div>
        </div>

        <!-- Banner Section -->
        <div class="col-lg-3 event-banner-section">
            <h5 class="blue-tag">EVENT</h5>
            <img src="/images/dummy-news-image.png" class="event-banner" alt="Event Banner">
        </div>

        <!-- Terbaru Section -->
        <div class="terbaru-section mt-4">
            <h5 class="blue-tag">TERBARU</h5>
            <div class="row">
                <!-- Section Kiri -->
                <div class="col-md-6">
                    @foreach (var b in Model.TerbaruList.Take(3))
                    {
                        <a href="/reader/Berita/@b.Id" class="text-decoration-none text-dark">
                            <div class="terbaru-item d-flex mb-3">
                                <img src="/images/dummy-news-image.png" class="terbaru-image me-3" alt="Berita Terbaru">
                                <div>
                                    <h6 class="terbaru-title">@b.Judul</h6>
                                    <span class="terbaru-category">Kategori: @b.SubKategori?.Kategori?.Nama</span><br>
                                    <span class="terbaru-date">Diperbarui @b.Tanggal_Publish.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                            </div>
                        </a>
                    }
                </div>

                <!-- Section Kanan -->
                <div class="col-md-6">
                    @foreach (var b in Model.TerbaruList.Skip(3).Take(3))
                    {
                        <a href="/reader/Berita/@b.Id" class="text-decoration-none text-dark">
                            <div class="terbaru-item d-flex mb-3">
                                <img src="/images/dummy-news-image.png" class="terbaru-image me-3" alt="Berita Terbaru">
                                <div>
                                    <h6 class="terbaru-title">@b.Judul</h6>
                                    <span class="terbaru-category">Kategori: @b.SubKategori?.Kategori?.Nama</span><br>
                                    <span class="terbaru-date">Diperbarui @b.Tanggal_Publish.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- What's On dan Kolom Penulis Section -->
        <div class="row align-items-start mt-5">
            <div class="col-lg-8">
                <!-- What's On Section -->
                @for (int section = 1; section <= 4; section++) 
                {
                    <div class="terbaru-section mb-4">
                        <h5 class="blue-tag">What's On [ Kategori ]</h5>
                        <div class="row g-3">
                            @for (int i = 1; i <= 6; i++)
                            {
                                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                                    <a href="/reader/Berita" class="text-decoration-none text-dark">
                                        <div class="sub-headline-item text-start">
                                            <img src="/images/dummy-news-image.png" class="img-fluid rounded mb-2" alt="Berita Sub Kategori">
                                            <h6 class="sub-headline-title">Judul Berita What's On</h6>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Kolom Penulis Section -->
            <div class="col-lg-4">
                <h5 class="pink-tag">KOLOM PENULIS</h5>
                <div class="writer-column mb-4">

                    <!-- Profil Penulis -->
                    <a href="/reader/ProfilPenulis" class="writer-profile d-flex mb-3 text-decoration-none text-dark">
                        <img src="/images/profile-icon.png" class="writer-image me-3" alt="Penulis">
                        <div>
                            <h6 class="writer-name mb-0">Nama Lengkap Penulis</h6>
                            <span class="writer-profession d-block">Jurnalis Teknologi</span>
                            <small class="latest-article">Judul Berita Terbaru Penulis</small>
                        </div>
                    </a>

                    <!-- Profil Penulis -->
                    <a href="/reader/ProfilPenulis" class="writer-profile d-flex mb-3 text-decoration-none text-dark">
                        <img src="/images/profile-icon.png" class="writer-image me-3" alt="Penulis">
                        <div>
                            <h6 class="writer-name mb-0">Nama Lengkap Penulis</h6>
                            <span class="writer-profession d-block">Jurnalis Teknologi</span>
                            <small class="latest-article">Judul Berita Terbaru Penulis</small>
                        </div>
                    </a>

                    <!-- Profil Penulis -->
                    <a href="/reader/ProfilPenulis" class="writer-profile d-flex mb-3 text-decoration-none text-dark">
                        <img src="/images/profile-icon.png" class="writer-image me-3" alt="Penulis">
                        <div>
                            <h6 class="writer-name mb-0">Nama Lengkap Penulis</h6>
                            <span class="writer-profession d-block">Jurnalis Teknologi</span>
                            <small class="latest-article">Judul Berita Terbaru Penulis</small>
                        </div>
                    </a>

                    <!-- Profil Penulis -->
                    <a href="/reader/ProfilPenulis" class="writer-profile d-flex mb-3 text-decoration-none text-dark">
                        <img src="/images/profile-icon.png" class="writer-image me-3" alt="Penulis">
                        <div>
                            <h6 class="writer-name mb-0">Nama Lengkap Penulis</h6>
                            <span class="writer-profession d-block">Jurnalis Teknologi</span>
                            <small class="latest-article">Judul Berita Terbaru Penulis</small>
                        </div>
                    </a>

                    <!-- Profil Penulis -->
                    <a href="/reader/ProfilPenulis" class="writer-profile d-flex mb-3 text-decoration-none text-dark">
                        <img src="/images/profile-icon.png" class="writer-image me-3" alt="Penulis">
                        <div>
                            <h6 class="writer-name mb-0">Nama Lengkap Penulis</h6>
                            <span class="writer-profession d-block">Jurnalis Teknologi</span>
                            <small class="latest-article">Judul Berita Terbaru Penulis</small>
                        </div>
                    </a>

                    <!-- Profil Penulis -->
                    <a href="/reader/ProfilPenulis" class="writer-profile d-flex mb-3 text-decoration-none text-dark">
                        <img src="/images/profile-icon.png" class="writer-image me-3" alt="Penulis">
                        <div>
                            <h6 class="writer-name mb-0">Nama Lengkap Penulis</h6>
                            <span class="writer-profession d-block">Jurnalis Teknologi</span>
                            <small class="latest-article">Judul Berita Terbaru Penulis</small>
                        </div>
                    </a>

                    <!-- Profil Penulis -->
                    <a href="/reader/ProfilPenulis" class="writer-profile d-flex mb-3 text-decoration-none text-dark">
                        <img src="/images/profile-icon.png" class="writer-image me-3" alt="Penulis">
                        <div>
                            <h6 class="writer-name mb-0">Nama Lengkap Penulis</h6>
                            <span class="writer-profession d-block">Jurnalis Teknologi</span>
                            <small class="latest-article">Judul Berita Terbaru Penulis</small>
                        </div>
                    </a>

                </div>
            </div>

        </div>

    </div>
</div>
