@model TestWinnicode.ViewModels.TulisArtikelViewModel
@{
    Layout = "~/Views/Shared/_LayoutPenulis.cshtml";
    ViewBag.Title = "Tulis Artikel - Penulis";
}

<form asp-action="TulisArtikel" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Judul" class="form-label fw-semibold"></label>
        <input asp-for="Judul" class="form-control" placeholder="Masukkan judul artikel" required />
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="KategoriId" class="form-label fw-semibold">Kategori</label>
            <select asp-for="KategoriId" class="form-select" id="kategori">
                <option value="">Pilih Kategori</option>
                @foreach (var kategori in ViewBag.KategoriList)
                {
                    <option value="@kategori.Id">@kategori.Nama</option>
                }
            </select>
        </div>
        <div class="col-md-6">
            <label asp-for="SubKategoriId" class="form-label fw-semibold">Subkategori</label>
            <select asp-for="SubKategoriId" class="form-select" id="subkategori">
                <option value="">Pilih Subkategori</option>
            </select>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Tag" class="form-label fw-semibold"></label>
        <input asp-for="Tag" class="form-control" placeholder="Pisahkan dengan koma (,)" />
    </div>

    <div class="mb-4">
        <label asp-for="Gambar" class="form-label fw-semibold">Upload Gambar Cover</label>
        <input asp-for="Gambar" class="form-control" accept="image/*" />
    </div>

    <div class="mb-3">
        <label for="IsiArtikel" class="form-label fw-semibold">Isi Artikel</label>
        <textarea class="form-control" name="IsiArtikel" id="IsiArtikel" rows="12" placeholder="Tulis isi artikel..." required></textarea>
    </div>

    <div class="text-end">
        <button type="submit" name="submitType" value="draft" class="btn btn-secondary me-2">Simpan Draft</button>
        <button type="submit" name="submitType" value="ajukan" class="btn btn-primary">Ajukan</button>
    </div>

</form>
