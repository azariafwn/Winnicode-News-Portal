@model List<TestWinnicode.ViewModels.ArtikelPenulisViewModel>
@{
    Layout = "~/Views/Shared/_LayoutPenulis.cshtml";
    ViewBag.Title = "Artikel Saya - Penulis";
    int no = 1;
}

<div class="container mt-4">
    <h2 class="mb-4 author-name">Artikel Saya</h2>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead>
                <tr>
                    <th scope="col" class="table-header">No</th>
                    <th scope="col" class="table-header">Judul Artikel</th>
                    <th scope="col" class="table-header">Status</th>
                    <th scope="col" class="table-header">Last Edit</th>
                    <th scope="col" class="table-header">Aksi</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@no</td>
                        <td>@item.Judul</td>
                        <td>
                            @switch (item.Status?.ToLower())
                            {
                                case "draft":
                                    <span class="badge bg-warning text-dark">Draft</span>
                                    break;
                                case "ditinjau":
                                    <span class="badge bg-secondary">Ditinjau</span>
                                    break;
                                case "ditolak":
                                    <span class="badge bg-danger">Ditolak</span>
                                    break;
                                case "terbit":
                                    <span class="badge bg-success">Terbit</span>
                                    break;
                                default:
                                    <span class="badge bg-light text-dark">Tidak Diketahui</span>
                                    break;
                            }
                        </td>
                        <td>@item.TanggalEdit.ToString("dd MMMM yyyy")</td>
                        <td>
                            <a href="/Berita/Detail/@item.Id" class="text-primary me-2" title="Lihat"><i class="bi bi-eye-fill"></i></a>
                            <a href="/Penulis/EditArtikel/@item.Id" class="text-success me-2" title="Edit"><i class="bi bi-pencil-square"></i></a>
                            <a href="/Penulis/DeleteArtikel/@item.Id" class="text-danger" title="Hapus"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                    no++;
                }
            </tbody>
        </table>
    </div>
</div>
