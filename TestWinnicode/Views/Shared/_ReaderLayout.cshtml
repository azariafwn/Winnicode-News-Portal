<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/reader.css?v=1.0.3">
</head>
<body>
    @await Html.PartialAsync("_HeaderReader")
    @await Html.PartialAsync("_NavbarReader")

    <main class="container my-4">
        @RenderBody()
    </main>

    @await Html.PartialAsync("_FooterReader")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Definisikan path gambar sebagai variabel global JavaScript.
        // Razor akan memproses @Url.Content menjadi path yang benar SEBELUM dikirim ke browser.
        const likeIconDefault = '@Url.Content("~/images/like-icon.png")';
        const likeIconFilled = '@Url.Content("~/images/like-icon-active.png")';
        const dislikeIconDefault = '@Url.Content("~/images/dislike-icon.png")';
        const dislikeIconFilled = '@Url.Content("~/images/dislike-icon-active.png")';
    </script>

    <script src="/js/reader.js"></script>
    <script src="/js/toggleSearch.js"></script>
</body>
</html>
